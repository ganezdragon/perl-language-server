{
  "name": "perl-language-server",
  "displayName": "Perl IDE (beta)",
  "description": "Perl IDE (beta)",
  "version": "0.1.4",
  "scripts": {
    "compile": "tsc -b",
    "clean": "rm -rf server/out && rm -rf client/out",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm i && cd ../server && npm i && cd .."
  },
  "engines": {
    "vscode": "^1.46.0"
  },
  "main": "./client/out/extension",
  "activationEvents": [
    "onLanguage:perl"
  ],
  "author": "ganezdragon",
  "publisher": "ganezdragon",
  "repository": {
    "type": "git",
    "url": "https://github.com/ganezdragon/perl-language-server"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "title": "Perl",
      "properties": {
        "perl.showAllErrors": {
          "scope": "window",
          "type": "boolean",
          "default": false,
          "description": "(Experimental) Since the perl parser is still evolving, the parser could throw errors on valid token. So we are disabling this by default, and having minimal features. Enable it to get the full parser features currently experimental."
        },
        "perl.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "perl.caching": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "eager",
          "enum": [
            "full",
            "eager"
          ],
          "enumDescriptions": [
            "Caches the entire workspace source tree. For a large workspace this could crash the server",
            "Caches only the opened files. This will be still fast."
          ]
        }
      }
    },
    "breakpoints": [
      {
        "language": "perl"
      }
    ],
    "debuggers": [
      {
        "type": "perl",
        "label": "Debug Perl script",
        "program": "./server/out/debugger/debugAdapter.js",
        "runtime": "node",
        "languages": [
          "perl"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a perl script.",
                "default": "${workspaceFolder}/script.pl"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "perl",
            "request": "launch",
            "name": "Run Script",
            "program": "${workspaceFolder}/script.pl"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "perl",
        "aliases": [
          "perl",
          "perl"
        ],
        "extensions": [
          ".pl",
          ".pm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "perl",
        "path": "./server/src/snippets/basic.json"
      }
    ]
  },
  "devDependencies": {
    "typescript": "^4.3.2",
    "vsce": "^1.88.0"
  }
}
