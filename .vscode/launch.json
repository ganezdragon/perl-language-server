// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension Cilent",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/client/out/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to language server",
      "port": 6009,
			"restart": true,
			"outFiles": ["${workspaceRoot}/server/out/**/*.js"]
    },
    {
			"name": "Launch as debugger as server",
			"type": "node",
			"protocol": "inspector",
			"request": "launch",
			"program": "${workspaceFolder}/server/out/debugger/debugAdapter.js",
			"args": [
				"--server=4711"
			],
			"outFiles": [
				"${workspaceFolder}/server/out/**/*.js"
			],
			"sourceMaps": true,
			"smartStep": true
		},
    {
      "name": "Attach to perl debugger by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    }
  ],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Extension Cilent", "Attach to language server"]
		}
	]
}
