// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension Cilent",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/client/out/**/*.js"
      ],
      "preLaunchTask": "npm: watch"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to language server",
      "port": 6009,
			"restart": true,
			"outFiles": ["${workspaceRoot}/server/out/**/*.js"]
    },
    {
      // not used
			"name": "Extension with Debugger",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "program": "${workspaceFolder}/server/out/debugger/debugAdapter.js",
			"outFiles": [
				"${workspaceFolder}/client/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
    {
      // this work, now set debugServer property in your extension launched launch.json
			"name": "Debugger Server",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/server/src/debugger/debugAdapter.ts",
			"args": [
				"--server=4711"
			],
			"outFiles": [
				"${workspaceFolder}/server/out/debugger/**/*.js"
			],
      "sourceMaps": true,
			"preLaunchTask": "npm: compile"
		}
  ],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Extension Cilent", "Attach to language server"]
		}
	]
}
